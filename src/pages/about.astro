---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { Image } from "@astrojs/image/components";
import { authors } from "@data/authors";
import Pagetitle from "@components/pagetitle.astro";
import Link from "@components/ui/link.astro";
---

<Layout title="About">
  <Container>
    <Pagetitle>
      <Fragment slot="title">About</Fragment>
      <Fragment slot="desc">Blog on the books i read.</Fragment>
    </Pagetitle>

    <div class="flex justify-center  mx-auto max-w-4xl mt-12">
      {
        authors.slice(0, 3).map((item) => (
          <div class="group">
            <div class="w-full aspect-square">
              <Image
                src={item.image}
                format="avif"
                width={150}
                height={150}
                alt="Team"
                class="w-full h-full object-cover rounded transition  group-hover:-translate-y-1 group-hover:shadow-xl"
              />
            </div>

            <div class="mt-4 text-center">
              <h3 class="text-sm "> {item.name}</h3>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mx-auto max-w-xl text-center mt-14">
      <p class="text-lg leading-relaxed light:text-gray-600 dark:text-white">
        I am a Full Stack Engineer not afraid to get their feet wet. I am interested in AI/ML as well building backend systems.
        Ooh and i like reading ðŸ˜….
      </p>
      <div class="mt-8">
        <Link href="/contact" class="dark:bg-gray-600 light:bg-black" style="primary">Get in touch</Link>
      </div>
    </div>
  </Container>
</Layout>
